<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/food_name"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="18dp"
        android:hint="Item Name" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/expirationCalender"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="90dp"
        android:entries="@array/Category" />

    <Switch
        android:id="@+id/notification_switch"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_below="@+id/category_spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="114dp"
        android:text="Turn On Notification" />

    <TextView
        android:id="@+id/ex_dateTV"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="133dp"
        android:text="Enter Expiration Date (M/D/Y)" />

    <Button
        android:id="@+id/placeInFridgeCalender"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ex_dateTV"
        android:layout_alignParentStart="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/expirationCalender"
        android:onClick="onClick"
        android:text="open date picker" />

    <Button
        android:id="@+id/expirationCalender"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ex_dateTV"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="83dp"
        android:onClick="onClick"
        android:text="open date picker" />

    <EditText
        android:id="@+id/quatityItem"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/food_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/food_name"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="number" />

</RelativeLayout>